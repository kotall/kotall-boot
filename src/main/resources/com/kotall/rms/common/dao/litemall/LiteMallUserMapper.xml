<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallUserMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.litemall.LiteMallUserEntity">
		SELECT
			`id`, 
			`store_id`,
			`username`,
			`password`, 
			`gender`, 
			`birthday`, 
			`last_login_time`, 
			`last_login_ip`, 
			`user_level`, 
			`nickname`, 
			`mobile`, 
			`avatar`, 
			`weixin_openid`, 
			`status`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_user
		<if test="sql_filter != null and sql_filter.trim() !='' ">
			WHERE ${sql_filter}
		</if>
		ORDER BY
			add_time DESC
	</select>
	
	<insert id="save">
		INSERT INTO lite_mall_user (
			`store_id`,
			`username`,
			`password`,
			`gender`, 
			`birthday`, 
			`last_login_time`, 
			`last_login_ip`, 
			`user_level`, 
			`nickname`, 
			`mobile`, 
			`avatar`, 
			`weixin_openid`, 
			`status`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		)
		VALUES (
			#{storeId},
			#{username},
			#{password},
			#{gender}, 
			#{birthday}, 
			#{lastLoginTime}, 
			#{lastLoginIp}, 
			#{userLevel}, 
			#{nickname}, 
			#{mobile}, 
			#{avatar}, 
			#{weixinOpenid}, 
			#{status}, 
			#{addTime}, 
			#{updateTime}, 
			#{deleted}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.litemall.LiteMallUserEntity">
		SELECT
			`id`, 
			`store_id`,
			`username`,
			`password`, 
			`gender`, 
			`birthday`, 
			`last_login_time`, 
			`last_login_ip`, 
			`user_level`, 
			`nickname`, 
			`mobile`, 
			`avatar`, 
			`weixin_openid`, 
			`status`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_user
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_user
	 	<set>
			<if test="storeId != null">`store_id` = #{storeId}, </if>
			<if test="username != null">`username` = #{username}, </if>
			<if test="password != null">`password` = #{password}, </if>
			<if test="gender != null">`gender` = #{gender}, </if>
			<if test="birthday != null">`birthday` = #{birthday}, </if>
			<if test="lastLoginTime != null">`last_login_time` = #{lastLoginTime}, </if>
			<if test="lastLoginIp != null">`last_login_ip` = #{lastLoginIp}, </if>
			<if test="userLevel != null">`user_level` = #{userLevel}, </if>
			<if test="nickname != null">`nickname` = #{nickname}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="avatar != null">`avatar` = #{avatar}, </if>
			<if test="weixinOpenid != null">`weixin_openid` = #{weixinOpenid}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="deleted != null">`deleted` = #{deleted}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			lite_mall_user
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="list" resultType="com.kotall.rms.common.entity.litemall.LiteMallUserEntity">
		SELECT
			`id`,
			`store_id`,
			`username`,
			`password`,
			`gender`,
			`birthday`,
			`last_login_time`,
			`last_login_ip`,
			`user_level`,
			`nickname`,
			`mobile`,
			`avatar`,
			`weixin_openid`,
			`status`,
			`add_time`,
			`update_time`,
			`deleted`
		FROM
			lite_mall_user
		<where>
			<if test="storeId != null"> `store_id` = #{storeId}</if>
			<if test="weixinOpenid != null"> `weixin_openid` = #{weixinOpenid}</if>
			<if test="username != null"> `username` = #{username}</if>
			<if test="nickname != null"> `nickname` = #{nickname}</if>
			<if test="userLevel != null"> `user_level` = #{userLevel}</if>
			<if test="gender != null"> `gender` = #{gender}</if>
			<if test="deleted != null"> and `deleted` = #{deleted}</if>
			<if test="mobile != null"> and `mobile` = #{mobile}</if>
			<if test="status != null"> and `status` = #{status}</if>
		</where>
		ORDER BY
			add_time DESC
	</select>

</mapper>