<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.sys.SysOssMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.sys.SysOssEntity">
		SELECT
			`id`, 
			`url`, 
			`create_date`
		FROM
			sys_oss
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO sys_oss (
			`url`, 
			`create_date`
		)
		VALUES (
			#{url}, 
			#{createDate}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.sys.SysOssEntity">
		SELECT
			`id`, 
			`url`, 
			`create_date`
		FROM
			sys_oss
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE sys_oss
	 	<set>
			<if test="url != null">`url` = #{url}, </if>
			<if test="createDate != null">`create_date` = #{createDate}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			sys_oss
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>