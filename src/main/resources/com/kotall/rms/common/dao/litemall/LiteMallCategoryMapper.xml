<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallCategoryMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.litemall.LiteMallCategoryEntity">
		SELECT
			`id`, 
			`store_id`,
			`name`,
			`keywords`, 
			`desc`, 
			`pid`, 
			`icon_url`, 
			`pic_url`, 
			`level`, 
			`sort_order`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_category
		<if test="sql_filter != null and sql_filter.trim() !='' ">
			WHERE ${sql_filter}
		</if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO lite_mall_category (
			`store_id`,
			`name`,
			`keywords`,
			`desc`, 
			`pid`, 
			`icon_url`, 
			`pic_url`, 
			`level`, 
			`sort_order`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		)
		VALUES (
			#{storeId},
			#{name},
			#{keywords},
			#{desc}, 
			#{pid}, 
			#{iconUrl}, 
			#{picUrl}, 
			#{level}, 
			#{sortOrder}, 
			#{addTime}, 
			#{updateTime}, 
			#{deleted}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.litemall.LiteMallCategoryEntity">
		SELECT
			`id`, 
			`store_id`,
			`name`,
			`keywords`, 
			`desc`, 
			`pid`, 
			`icon_url`, 
			`pic_url`, 
			`level`, 
			`sort_order`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_category
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_category
	 	<set>
			<if test="storeId != null">`store_id` = #{storeId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="keywords != null">`keywords` = #{keywords}, </if>
			<if test="desc != null">`desc` = #{desc}, </if>
			<if test="pid != null">`pid` = #{pid}, </if>
			<if test="iconUrl != null">`icon_url` = #{iconUrl}, </if>
			<if test="picUrl != null">`pic_url` = #{picUrl}, </if>
			<if test="level != null">`level` = #{level}, </if>
			<if test="sortOrder != null">`sort_order` = #{sortOrder}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="deleted != null">`deleted` = #{deleted}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			lite_mall_category
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="list" resultType="com.kotall.rms.common.entity.litemall.LiteMallCategoryEntity">
		SELECT
			`id`,
			`store_id`,
			`name`,
			`keywords`,
			`desc`,
			`pid`,
			`icon_url`,
			`pic_url`,
			`level`,
			`sort_order`,
			`add_time`,
			`update_time`,
			`deleted`
		FROM
			lite_mall_category
		<where>
			<if test="storeId != null and storeId !='' ">`store_id` = #{storeId}</if>
			<if test="deleted != null and deleted !='' "> and `deleted` = #{deleted}</if>
			<if test="level != null and level !='' "> and `level` = #{level}</if>
		</where>
		ORDER BY
			id DESC
	</select>
</mapper>