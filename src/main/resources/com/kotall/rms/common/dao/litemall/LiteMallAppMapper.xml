<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallAppMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.litemall.LiteMallAppEntity">
		SELECT
			`id`, 
			`app_id`, 
			`store_id`, 
			`version`, 
			`CREATED_TIME`, 
			`UPDATED_TIME`
		FROM
			lite_mall_app
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO lite_mall_app (
			`app_id`, 
			`store_id`, 
			`version`, 
			`CREATED_TIME`, 
			`UPDATED_TIME`
		)
		VALUES (
			#{appId}, 
			#{storeId}, 
			#{version}, 
			#{createdTime}, 
			#{updatedTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.litemall.LiteMallAppEntity">
		SELECT
			`id`, 
			`app_id`, 
			`store_id`, 
			`version`, 
			`CREATED_TIME`, 
			`UPDATED_TIME`
		FROM
			lite_mall_app
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_app
	 	<set>
			<if test="appId != null">`app_id` = #{appId}, </if>
			<if test="storeId != null">`store_id` = #{storeId}, </if>
			<if test="version != null">`version` = #{version}, </if>
			<if test="createdTime != null">`CREATED_TIME` = #{createdTime}, </if>
			<if test="updatedTime != null">`UPDATED_TIME` = #{updatedTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			lite_mall_app
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>