<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallFootprintMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.litemall.LiteMallFootprintEntity">
		SELECT
			`id`, 
			`user_id`, 
			`goods_id`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_footprint
		<if test="sql_filter != null and sql_filter.trim() !='' ">
			WHERE ${sql_filter}
		</if>
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO lite_mall_footprint (
			`user_id`, 
			`goods_id`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		)
		VALUES (
			#{userId}, 
			#{goodsId}, 
			#{addTime}, 
			#{updateTime}, 
			#{deleted}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.litemall.LiteMallFootprintEntity">
		SELECT
			`id`, 
			`user_id`, 
			`goods_id`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_footprint
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_footprint
	 	<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="goodsId != null">`goods_id` = #{goodsId}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="deleted != null">`deleted` = #{deleted}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			lite_mall_footprint
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>