<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallStoreMapper">
	
	<select id="listForPage" resultType="com.kotall.rms.common.entity.litemall.LiteMallStoreEntity">
		SELECT
			`id`, 
			`name`, 
			`status`, 
			`type`, 
			`main_buz`, 
			`brand`, 
			`address`, 
			`location_x`, 
			`location_y`, 
			`user_id`, 
			`contact_man`, 
			`contact_phone`, 
			`CREATE_TIME`, 
			`UPDATE_TIME`
		FROM
			lite_mall_store
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO lite_mall_store (
			`name`, 
			`status`, 
			`type`, 
			`main_buz`, 
			`brand`, 
			`address`, 
			`location_x`, 
			`location_y`, 
			`user_id`, 
			`contact_man`, 
			`contact_phone`, 
			`CREATE_TIME`, 
			`UPDATE_TIME`
		)
		VALUES (
			#{name}, 
			#{status}, 
			#{type}, 
			#{mainBuz}, 
			#{brand}, 
			#{address}, 
			#{locationX}, 
			#{locationY}, 
			#{userId}, 
			#{contactMan}, 
			#{contactPhone}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="com.kotall.rms.common.entity.litemall.LiteMallStoreEntity">
		SELECT
			`id`, 
			`name`, 
			`status`, 
			`type`, 
			`main_buz`, 
			`brand`, 
			`address`, 
			`location_x`, 
			`location_y`, 
			`user_id`, 
			`contact_man`, 
			`contact_phone`, 
			`CREATE_TIME`, 
			`UPDATE_TIME`
		FROM
			lite_mall_store
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_store
	 	<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="mainBuz != null">`main_buz` = #{mainBuz}, </if>
			<if test="brand != null">`brand` = #{brand}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="locationX != null">`location_x` = #{locationX}, </if>
			<if test="locationY != null">`location_y` = #{locationY}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="contactMan != null">`contact_man` = #{contactMan}, </if>
			<if test="contactPhone != null">`contact_phone` = #{contactPhone}, </if>
			<if test="createTime != null">`CREATE_TIME` = #{createTime}, </if>
			<if test="updateTime != null">`UPDATE_TIME` = #{updateTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			lite_mall_store
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>