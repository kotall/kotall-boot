<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotall.rms.common.dao.litemall.LiteMallAddressMapper">
	
	<select id="list" resultType="com.kotall.rms.common.entity.litemall.LiteMallAddressEntity">
		SELECT
			`id`, 
			`store_id`,
			`name`,
			`user_id`, 
			`province_id`, 
			`city_id`, 
			`area_id`, 
			`address`, 
			`mobile`, 
			`is_default`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_address
		<where>
			<if test="storeId != null "> `store_id` = #{storeId}</if>
			<if test="userId != null "> and `user_id` = #{userId}</if>
			<if test="isDefault != null "> and `is_default` = #{isDefault}</if>
			<if test="deleted != null "> and `deleted` = #{deleted}</if>
			<if test="mobile != null "> and `mobile` = #{mobile}</if>
			<if test="sql_filter != null and sql_filter.trim() !='' "> and ${sql_filter}</if>
		</where>
		ORDER BY
			add_time DESC
	</select>
	
	<insert id="insert" parameterType="com.kotall.rms.common.entity.litemall.LiteMallAddressEntity">
		<selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO lite_mall_address (
			`store_id`,
			`name`,
			`user_id`,
			`province_id`, 
			`city_id`, 
			`area_id`, 
			`address`, 
			`mobile`, 
			`is_default`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		)
		VALUES (
			#{storeId},
			#{name},
			#{userId},
			#{provinceId}, 
			#{cityId}, 
			#{areaId}, 
			#{address}, 
			#{mobile}, 
			#{isDefault}, 
			NOW(),
			#{updateTime}, 
			#{deleted}
		)
	</insert>
	
	<select id="getById" resultType="com.kotall.rms.common.entity.litemall.LiteMallAddressEntity">
		SELECT
			`id`, 
			`store_id`,
			`name`,
			`user_id`, 
			`province_id`, 
			`city_id`, 
			`area_id`, 
			`address`, 
			`mobile`, 
			`is_default`, 
			`add_time`, 
			`update_time`, 
			`deleted`
		FROM
			lite_mall_address
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE lite_mall_address
	 	<set>
			<if test="storeId != null">`store_id` = #{storeId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="provinceId != null">`province_id` = #{provinceId}, </if>
			<if test="cityId != null">`city_id` = #{cityId}, </if>
			<if test="areaId != null">`area_id` = #{areaId}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="isDefault != null">`is_default` = #{isDefault}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="deleted != null">`deleted` = #{deleted}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchDelete">
		DELETE
		FROM
			lite_mall_address
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	<select id="getByUserId" resultType="com.kotall.rms.common.entity.litemall.LiteMallAddressEntity">
		SELECT
			`id`,
			`store_id`,
			`name`,
			`user_id`,
			`province_id`,
			`city_id`,
			`area_id`,
			`address`,
			`mobile`,
			`is_default`,
			`add_time`,
			`update_time`,
			`deleted`
		FROM
			lite_mall_address
		WHERE
			user_id = #{userId}
	</select>

	<update id="resetDefault">
		UPDATE lite_mall_address
		<set>
			<if test="address.isDefault != null">`is_default` = #{address.isDefault}, </if>
			<if test="address.updateTime != null">`update_time` = #{address.updateTime}, </if>
		</set>
		WHERE
			user_id = #{query.userId}
		AND deleted = #{query.deleted}
	</update>
</mapper>